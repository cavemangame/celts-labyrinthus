<Page x:Class="Labyrinthus.Pages.PagePackPrimitives"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AidedCanvas="clr-namespace:Labyrinthus.AidedCanvas"
    Title="PagePackPrimitives" Loaded="Page_Loaded">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Right">          
            <Label Margin="0,2,0,0" HorizontalAlignment="Center">Примитивы</Label>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" Name="StackPrimitives">
            <Viewbox Name="ViewPrimitives">
                <AidedCanvas:PrimitivePackCanvas x:Name="PrimitivePackCanvas" Background="White" 
                                                 MouseLeftButtonDown="PrimitivePackCanvas_MouseLeftButtonDown"  
                                                 MouseLeftButtonUp="PrimitivePackCanvas_MouseLeftButtonUp"
                                                 Width="200" Height="200">
                </AidedCanvas:PrimitivePackCanvas>
            </Viewbox>
        </StackPanel>
    </DockPanel>
</Page>
